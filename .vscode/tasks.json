{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"args": ["--bin", "client-bevy-native", "--features", "dev"],
			"problemMatcher": [
				"$rustc"
			],
			"label": "run client native"
		},
		{
			"type": "shell",
			"command": "./build-dev-client.sh",
			"label": "watch native client"
		},
		{
			"type": "shell",
			"command": "./build-dev-wasm.sh",
			"label": "watch wasm client"
		}
	]
}